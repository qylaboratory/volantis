//===========================
//  样式覆盖
//===========================

// 样式修订 HandSome H1 H2 标题
article#post
  & h2
    font-weight: 900
    line-height: inherit
    background: linear-gradient(to bottom,transparent 60%,rgba(189,202,219,.3) 0) no-repeat
    display: initial
    width: auto
    border-bottom: none
  & h3
    font-weight 900

// <kbd></kbd>
kbd
  background-color: #f2f2f2
  color: var(--color-p)
  padding: 3px 5px
  border-radius: 0.25em
  box-shadow: inset 0 -2px 0 hsl(240deg 1% 83%), 0 1px 1px rgba(0,0,0,.05)
  font: 11px SFMono-Regular,Consolas,Liberation Mono,Menlo,monospace


// 列表页正文内容左对齐
.post.post-v3.white-box  p
  text-align: left

// 侧边栏：个人卡片
.blogger .text
  margin-bottom: 10px


// 文章页头图：隐藏显示
#l_main .article .headimg-div
  display: none

// 文章页一级标题：加粗、居中、大小设定
h1.title
  text-align: center
  font-size: 2em !important
  font-weight: 600
h1.title.common_read_h1
  text-align: center !important
  font-size: 2.5rem !important


// 文章页段落内容： 首行缩进
#l_main > article.cus-indent
  p
    text-indent 2em
    &.p
      text-indent 0 
  details,
  blockquote,
  section,
  .prev-next,
  .new-meta-box,
  .note,
  .tag,
  .tab-pane .checkbox,
  li
    p
      text-indent 0

// 文章页页脚导航：限制其高度
#l_main .article .prev-next>a p.content
  max-height: 5rem
  overflow: hidden


// 标签：blocknote 标题字号增大
.note.quote strong
  font-size: 1.5rem

// 标签：标题大小
details summary
  font-size 1em

// 标签：缩短 Tab 内时间线标题高度
.tab-pane > .timeline > .h2
  padding-top: 0

// 标签：link 链接居中
.md .tag.link
  text-align: center

// 自定义阴影
.cus-shadow
  box-shadow: 0 1px 3px #0000001f, 0 1px 2px #0000003d;

//侧边栏 宫格布局
//侧边栏 Artalk 
.grid.navigation,
.tab-pane-content
  a
    color var(--color-list)
    &:hover
      color: #ff5722