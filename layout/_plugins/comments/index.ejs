<%
    var checkComment = true;
    if (page.comments && page.comments == false) {
      checkComment = false;
    }
    var commentServerFlag = theme.comments.service == 'twikoo' ? 'block' : 'none';
%>
<% if (checkComment&&(theme.comments.service && theme.comments.service.length > 0)) { %>
  
  <% if(theme.comments.service == 'twikoo-beaudar') { %>
  <article class="post white-box <%- theme.custom_css.body.effect.join(' ') %>" id="comments">
    <div class="changeComment">
      <div class="comment-headline">
    <span hidden>
      <meta itemprop="discussionUrl" content="<%- url_for(path) %>#comments">
    </span>
    <p ct><%- theme.comments && theme.comments.title %></p>
    <% if (theme.comments && theme.comments.subtitle) { %>
      <p cst><%- theme.comments.subtitle %></p>
    <% } %>
      </div>
      <div class="comment-switch not-select" style="display: <%- commentServerFlag %>;">
        <span class="first-comment">Twikoo</span>
        <span class="switch-btn move cur-pointer" id="switchBtn"></span>
        <span class="second-comment">Beaudar</span>
      </div>
    </div>
    <div id="layoutHelper-comments"></div>
  </article>
  <% } else { %>
    <article class="post white-box <%- theme.custom_css.body.effect.join(' ') %>" id="comments">
      <span hidden>
        <meta itemprop="discussionUrl" content="<%- url_for(path) %>#comments">
      </span>
      <p ct><%- theme.comments && theme.comments.title %></p>
      <% if (theme.comments && theme.comments.subtitle) { %>
        <p cst><%- theme.comments.subtitle %></p>
      <% } %>
      
      <div id="layoutHelper-comments"></div>
    </article>
  <% } %>
<% } else { %>
  <% page.comments = false; %>
<% } %>
